<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-zinc-900 text-white min-h-screen">

    <div class="p-10">

        <!-- NAV -->
        <div class="mb-10">
            <a href="/" class="inline-block px-6 py-2 bg-green-500 rounded-md">
                Back Home
            </a>
        </div>

        <h1 class="text-3xl tracking-tight mb-6">All Users</h1>

        <div class="users flex flex-wrap gap-6">

            <% if (users.length === 0) { %>
                <h1 class="text-xl text-zinc-400">No users found</h1>
            <% } else { %>

                <% users.forEach((user) => { %>
                    <div class="user w-72 bg-zinc-800 rounded-xl p-4">

                        <div class="w-full h-52 rounded-lg overflow-hidden bg-zinc-700">
                            <img 
                                src="<%= user.image %>" 
                                alt="image"
                                class="w-full h-full object-cover">
                        </div>

                        <h3 class="text-xl mt-3 tracking-tight">
                            <%= user.name %>
                        </h3>

                        <h5 class="text-sm text-zinc-400 tracking-tight">
                            <%= user.email %>
                        </h5>

                        <div class="flex gap-3 mt-4">
                            <a href="/update/<%= user._id %>" class="px-4 py-2 bg-yellow-500 rounded-md text-black">
                                Update
                            </a>
                            <a href="/delete/<%= user._id %>" class="px-4 py-2 bg-red-500 rounded-md">
                                Delete
                            </a>
                        </div>

                    </div>
                <% }) %>

            <% } %>

        </div>
    </div>

</body>
</html>
